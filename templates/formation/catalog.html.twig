{% extends 'base.html.twig' %}

{% block title %}
	{{ 'Formation catalog'|trans }}
{% endblock %}

{% block body %}
	<h1>{{ 'Formation catalog'|trans }}</h1>

    {% set number = 0 %}
	<div class="accordion" id="accordionExample">
		{% for formation in formations %}
        	{% set number = number + 1 %}
			<div class="accordion-item">
				<h2 class="accordion-header">
					<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-{{ number }}" aria-expanded="true" aria-controls="collapse-{{ number }}">
						{{ formation.name }}
					</button>
				</h2>
				<div id="collapse-{{ number }}" class="accordion-collapse collapse {% if number < 2 %} show{% endif %}" data-bs-parent="#accordionExample">
					<div class="accordion-body">
						<strong>{{ formation.startDateTime|date }}</strong>
                        <br/>
						{{ formation.content|raw }}
						<br/>
						<a class="btn btn-primary" href="/formation/pdf/{{ formation.id }}" target="_blank">{{ 'Download PDF'|trans }}</a>						
					</div>
				</div>
			</div>
			<div>
			{% else %}
				no records found
			</div>
		{% endfor %}
	</div>

{% endblock %}
