{% extends 'base.html.twig' %}

{% block title %}Formation index
{% endblock %}

{% block body %}
	<h1>{{ 'Formation index'|trans }}</h1>


	<div id="carouselExampleCaptions" class="carousel carousel-dark slide">
		<div class="carousel-indicators">
			<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
			<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
			<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
		</div>
		<div class="carousel-inner">

			{% for paquetDe3Formations in tousLespaquets %}

			<div class="carousel-item active">
					<div class="row"> 
					<div class="col">
						<div class="card" style="width: 18rem;">
							<img src="/uploads/images/{{ paquetDe3Formations[1].imageFileName }}" class="card-img-top" alt="...">
							<div class="card-body">
								<h5 class="card-title">{{ paquetDe3Formations[1].name }}</h5>
								<p class="card-text">{{ paquetDe3Formations[1].description }}</p>
								<a href="/formation/pdf/{{ paquetDe3Formations[1].id }}" target="_blank" class="btn btn-primary">{{ 'PDF download'|trans }}</a>
							</div>
						</div>
					</div>
					{% if  paquetDe3Formations[2] is defined %}
					<div class="col">
						<div class="card" style="width: 18rem;">
							<img src="/uploads/images/{{ paquetDe3Formations[2].imageFileName }}" class="card-img-top" alt="...">
							<div class="card-body">
								<h5 class="card-title">{{ paquetDe3Formations[2].name }}</h5>
								<p class="card-text">{{ paquetDe3Formations[2].description }}</p>
								<a href="/formation/pdf/{{ paquetDe3Formations[2].id }}" target="_blank" class="btn btn-primary">{{ 'PDF download'|trans }}</a>
							</div>
						</div>
					</div>
					{% endif %}
					{% if  paquetDe3Formations[3] is defined %}
					<div class="col">
						<div class="card" style="width: 18rem;">
							<img src="/uploads/images/{{ paquetDe3Formations[3].imageFileName }}" class="card-img-top" alt="...">
							<div class="card-body">
								<h5 class="card-title">{{ paquetDe3Formations[3].name }}</h5>
								<p class="card-text">{{ paquetDe3Formations[3].description }}</p>
								<a href="/formation/pdf/{{ paquetDe3Formations[3].id }}" target="_blank" class="btn btn-primary">{{ 'PDF download'|trans }}</a>
							</div>
						</div>
					</div>
					{% endif %}
				</div>
			</div>
			{% endfor %}

		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>

{% endblock %}
